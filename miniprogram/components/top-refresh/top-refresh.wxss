/* components/top-refresh/top-refresh.wxss */
.refresh {
  position: absolute;
  width: 2rem;
  height: 2rem;
  border-radius: 50%;
  left: 50%;
}

.refresh>image {
  width: 100%;
  height: 100%;
  /* animation-play-state: paused; */
  animation: refresh 2s 1;
}

.animate {
  animation-play-state: running;
  animation-iteration-count:1;
}
@keyframes refresh {
  from {
    transform:rotate(0deg);
  }
  to {
    transform:rotate(360deg);
  }
}