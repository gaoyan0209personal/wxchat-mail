/* components/top-refresh/top-refresh.wxss */
.refresh {
  position: absolute;
  width: 2rem;
  height: 2rem;
  border-radius: 50%;
  top:.5rem;
  left: 50%;
  margin-top: 3.5rem;
  z-index: 2;
  padding: .2rem;
  background: #fff;
  /* border: .1rem solid greenyellow; */
  box-shadow: .05rem .05rem .05rem gray, -.05rem -.05rem .05rem gray,
    -.05rem .05rem .05rem gray, .05rem -.05rem .05rem gray;
}

.refresh>image {
  width: 100%;
  height: 100%;
}

.animate {
  animation: refresh infinite 0.5s;
}

@keyframes refresh {
  from {
    transform: rotate(0deg);
  }

  to {
    transform: rotate(360deg);
  }
}